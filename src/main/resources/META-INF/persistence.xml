<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="DevSync">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.entities.User</class>
        <class>com.entities.Ticket</class>
        <class>com.entities.Tag</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgerse_db"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="ayoub"/>
            <property name="hibernate.connection.password" value="ayoub"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- Use 'update' in development -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
